{
  "name": "mern-minimal",
  "version": "1.0.0",
  "description": "A simple MongoDB Express.js React Node.js (MERN) universal starter kit",
  "main": "index.js",
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "clean:dist": "shx rm -rf ./dist",
    "start:dev": "npm run clean:dist && cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon --experimental-modules ./index.js",
    "start:prod": "cross-env NODE_ENV=production node ./index.js",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.config.client.prod.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.config.server.prod.js",
    "build:start:prod": "npm run clean:dist && npm run build:client && npm run build:server && npm run start:prod",
    "client:test": "jest --coverage || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitrecipe/mern-minimal.git"
  },
  "bugs": {
    "url": "https://github.com/bitrecipe/mern-minimal/issues"
  },
  "private": true,
  "author": "Subeesh M.M <subeeshmm.open@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "@loadable/babel-plugin": "^5.8.0",
    "@loadable/webpack-plugin": "^5.7.1",
    "autoprefixer": "^9.5.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "file-loader": "^3.0.1",
    "glob": "^7.1.3",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "mini-css-extract-plugin": "^0.6.0",
    "nodemon": "^1.18.11",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
